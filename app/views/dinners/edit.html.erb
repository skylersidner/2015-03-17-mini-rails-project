<h2>Edit Dinner #<%= @dinner.id %></h2>

<% @dinner.errors.full_messages.each do |msg| %>
  <p><%= msg %></p>
<% end %>

<%= form_for @dinner, html: {class: "dinner_form"} do |f| %>
  <%= f.label "main_source" %>
  <%= f.text_field("main_source") %><br>
  
  <%= f.label "sauce" %>
  <%= f.text_field("sauce") %><br>
  
  <%= f.label "starch" %>
  <%= f.text_field("starch") %><br>
  
  <%= f.label "veggie" %>
  <%= f.text_field("veggie") %><br>
  
  <%= f.submit "Update This!"%>
<% end %>